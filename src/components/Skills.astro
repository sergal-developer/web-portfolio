---
import SkillsItem from "./shared-components/SkillsItem.astro";
import SkillsTechItem from "./shared-components/SkillsTechItem.astro";
import TitlePage from "./shared-components/TitlePage.astro";
import ADN from "./shared-components/ADN.astro";
import ADNS from "./shared-components/ADNS.astro";
import * as DATA from "../data/datacontent";

let {
  title,
  subtitle1,
  description1,
  subtitle2,
  description2,
  subtitle3,
  description3,
  skillsTitleDesign,
  skillsTitleFrontEnd,
  skillsTitleBackend,
  skillsTitleAdmin,
  skills,
  softSkills,
  hardSkills,
  education,
} = Astro.props;

const data = DATA.CONTENT.skills;

title = data.title;
subtitle1 = data.subtitle1;
description1 = data.description1;
subtitle2 = data.subtitle2;
description2 = data.description2;
subtitle3 = data.subtitle3;
description3 = data.description3;
skillsTitleDesign = data.skillsTitleDesign;
skillsTitleFrontEnd = data.skillsTitleFrontEnd;
skillsTitleBackend = data.skillsTitleBackend;
skillsTitleAdmin = data.skillsTitleAdmin;
skills = data.skills;
softSkills = data.softSkills;
hardSkills = data.hardSkills;
education = data.education;

const listSkillsDesign: any[] = [];
const listSkillsFrontend: any[] = [];
const listSkillsBackend: any[] = [];
const listSkillsAdmin: any[] = [];



data.skills.forEach((s) => {
  if (s.type.toLowerCase() === "frontend") {
    listSkillsFrontend.push(s);
  }
  if (s.type.toLowerCase() === "design") {
    listSkillsDesign.push(s);
  }
  if (s.type.toLowerCase() === "backend") {
    listSkillsBackend.push(s);
  }
  if (s.type.toLowerCase() === "admin") {
    listSkillsAdmin.push(s);
  }
});
